<div class="">
  <p>
    <form action="/action" method="post" enctype="multipart/form-data">
      <input type="hidden" name="toggleAdvertsStatus" value="{{advertsStatusToggled}}">
      <button class="btn waves-effect waves-light opsview" type="submit">
        {{#if advertsStatus}}
          Disable all adverts
        {{else}}
          Enable all adverts
        {{/if}}
      </button>
    </form>
  </p>
  <h3>Adverts</h3>
  {{#unless showAdverts}}
    <div class="card-panel light-blue darken-3 white-text" role="alert"><b>There are no adverts in the database</b></div>
  {{/unless}}
  {{#each adverts}}
    <div class="card horizontal" style="max-height:250px;">
      <div class="card-image hide-on-small-only">
        <img src="{{this.s3Url}}" style="max-height:250px;">
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <table class="responsive-table">
            <thead>
              <tr>
                <th>Advert Name</th>
                <th>Target Versions</th>
                <th>Created</th>
                <th>Redirect Url</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>{{this.name}}</td>
                <td>{{this.targetVersion}}</td>
                <td>{{created this.created}}</td>
                <td><a href="{{this.redirectUrl}}">{{this.redirectUrl}}</a></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="card-action">
          <form action="/remove-advert" method="post" enctype="multipart/form-data">
            <input type="hidden" name="advert_name" value="{{this.name}}">
            <button type="submit" class="btn red accent-4">Delete</button>
          </form>
        </div>
      </div>
    </div>
  {{/each}}
</div>
